<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Andrew</th>
      <th>Role</th>
      <th>Is approver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.andrew_id, user %></td>
        <td><%= user.role %></td>
        <td><%= user.is_approver %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "small-button" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "small-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "big-button" %>
