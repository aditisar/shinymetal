<h1>Listing Users</h1>

<% if @users.empty? %>

<p>No users found.</p>

<% else %>

<table>
  <thead>
    <tr>
      <th>Andrew</th>
      <th>Role</th>
      <th>Approver?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="users">
  <%= render partial: 'users/index_partials/user', collection: @users %>
  </tbody>
</table>

<!-- Kaminari paginate -->
<div id="paginator">
  <%= paginate @users, remote: true %>
</div>

<% end %>

<br>


<%= link_to 'New User', new_user_path, class: "big-button" %>
