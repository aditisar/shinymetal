<%= form_for(@user) do |f| %>
  <fieldset>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="collapsed_row">
    <div class="three-column">
      <%= f.label :andrew_id, class: "prefix" %>
    </div>
    <div class="nine-column">
      <%= f.text_field :andrew_id %>
    </div>
  <div class="collapsed_row">
    <div class="three-column">
      <%= f.label :role, class: "prefix" %>
    </div>
    <div class="nine-column">
      <%= f.select :role, User::ROLE_LIST %>
    </div>
  </div>
  <div class="collapsed_row">
    <%= f.check_box :active %>
    <%= f.label :active %>
  </div>
  
  <br/>
  
  <div class="actions">
    <%= f.submit class: "big-button success" %>
  </div>
  
  </fieldset>
  
<% end %>
