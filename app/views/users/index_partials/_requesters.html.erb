<h2>Requesters</h2>

<% if @requesters.empty? %>

 <p>No requesters found.</p>

<% else %>
  
  <table>
    <thead>
      <tr>
	<th>Andrew</th>
	<th>Role</th>
	<th>Active?</th>
	<th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% for user in @requesters %>
      <tr>
	<td><%= link_to user.andrew_id, user %></td>
	<td><%= user.role %></td>
	<td>
        <%= render partial: 'shared/boolean_label', locals: { boolean_label: user.active } %>
        </td>
	<td><%= link_to 'Edit', edit_user_path(user), class: "small-button" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  
<% end %>