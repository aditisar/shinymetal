<%= form_for(@user_key) do |f| %>
  <fieldset>

  <% if @user_key.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_key.errors.count, "error") %> prohibited this user_key from being saved:</h2>

      <ul>
      <% @user_key.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="column">
      <%= f.label :user %><br>
      <%= f.collection_select :user_id, User.alphabetical, :id, :andrew_id %>
    </div>
  
    <div class="column">
      <%= f.label :time_expired %><br>
      <%= f.date_field :time_expired, order: [:month, :day, :year], 
                      start_year: Date.today.year, 
                      end_year: 2.years.from_now %>
    </div>
  </div>
  <div class="field">
    <%= f.label :application_text %><br>
    <%= f.text_field :application_text %>
  </div>
  
  <%= render :partial => 'filters_checkboxes' %>
  
  <div class="actions">
    <%= f.submit class: "big-button success" %>
  </div>
  
  </fieldset>
<% end %>
