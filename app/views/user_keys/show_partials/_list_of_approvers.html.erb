<% if @user_key.at_stage? :awaiting_confirmation %>
  
  <% if @user_key.can_be_set_to? :confirmed %>

    <p>This key has been approved by everyone.</p>

  <% else %>
  
	<p>
	  <b><%= "Approvers who have not approved yet this key:" %></b><br />
	  <ul>
		<% for approver in User.approvers_only - @user_key.approval_users %>
		  <li><%= link_to approver.andrew_id, approver %></li>
		<% end  %>
	  </ul>
	</p>

  <% end %>

<% elsif @user_key.at_stage? :confirmed %>
  
<p>This key was approved by everyone.</p>
  
<% end %>