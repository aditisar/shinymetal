<p>
  <b><%= pluralize(@user_key.filters.size, 'Filter') %></b><br />
  <ul style="list-style: none; margin: 0; padding: 0;">
    <% for resourceName in @user_key.filters.map{|f| f.resource} %>
      <li><%= resourceName.capitalize + " Filters" %></li>
      <ul>
        <% for filter in @user_key.filters %>
          <% if filter.resource == resourceName %>
            <li><%= link_to((filter.name), filter_path(filter)) %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </ul>
</p>

