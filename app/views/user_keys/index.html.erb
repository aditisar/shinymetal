<h1>Listing User Keys</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Key Id</th>
      <th>Submitted</th>
      <th>Shared with approvers</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_keys.each do |user_key| %>
      <tr>
        <td><%= link_to user_key.user.andrew_id, user_key.user %></td>
        <td><%= link_to user_key.id, user_key %></td>
        <td><%= user_key.time_submitted.to_formatted_s(:pretty) %></td>
        <td><%= user_key.time_filtered.to_formatted_s(:pretty) %></td>
        <td><%= user_key.time_confirmed.to_formatted_s(:pretty) %></td>
        <td><%= link_to 'Edit', edit_user_key_path(user_key) %></td>
        <td><%= link_to 'Destroy', user_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User key', new_user_key_path, class: "big-button" %>
